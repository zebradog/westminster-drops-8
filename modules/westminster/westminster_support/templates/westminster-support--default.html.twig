{{ attach_library('westminster_support/base') }}

{% if config.manual.active %}
  {% if config.manual.title %}
    <h2>
      {{ config.manual.title }}
    </h2>
  {% endif %}
  {% if config.manual.description %}
    <div>
      {{ config.manual.description|raw }}
    </div>
  {% endif %}
  {% if config.manual.url %}
    <a class="btn btn-primary btn-lg" href="{{ config.manual.url|escape('html_attr') }}" target="_blank">
      <i class="fa fa-file-pdf-o" aria-hidden="true" role="presentation"></i>
      Download Manual
    </a>
  {% endif %}
{% endif %}
